{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "es6": true
  },
  "globals": {
    "document": true,
  },
  "rules": {
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-filename-extension": [0],
    "react/prefer-stateless-function": [0],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "**/webpack.*.js",
        "**/*.dev.js"
        ]}],
  }
}
